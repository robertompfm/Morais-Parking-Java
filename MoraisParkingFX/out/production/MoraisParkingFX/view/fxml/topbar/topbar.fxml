<?import javafx.scene.layout.HBox?>

<HBox prefHeight="60.0" prefWidth="1000.0" styleClass="topmenu" stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.MainController">
   <children>
      <HBox HBox.hgrow="ALWAYS">
         <children>
            <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" styleClass="topmenu-btn">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
               <graphic>
                  <FontAwesomeIcon glyphName="TH_LIST" size="2em" styleClass="topmenu-btn-icon" />
               </graphic>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
         <children>
            <MenuButton alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" prefHeight="60.0" prefWidth="60.0" styleClass="topmenu-btn">
              <items>
                <MenuItem mnemonicParsing="false" styleClass="topmenu-btn-item" text="Logout" />
              </items>
               <HBox.margin>
                  <Insets right="40.0" />
               </HBox.margin>
               <graphic>
                  <FontAwesomeIcon glyphName="USER" size="2em" styleClass="topmenu-btn-icon" />
               </graphic>
            </MenuButton>
         </children>
      </HBox>
   </children>
</HBox>
